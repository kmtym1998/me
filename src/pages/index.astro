---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { Profile } from '../components/Profile';
import { History } from '../components/History';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
// TODO: いらないスタイル消す
// TODO: 配色統一感
---

<html lang="ja">
  <head>
    <MainHead
      title="kmtym1998"
      description="The personal website of KOMATSUYAMA Ryohei"
    />
    <style>
      .wrapper {
        margin-top: 2em;
        margin-bottom: 2em;
      }

      .hero {
        position: relative;
        overflow: hidden;
      }

      @media (min-width: 750px) {
        .hero {
          height: 45vw;
        }
      }

      .img {
        display: block;
        width: 100%;
        height: auto;
      }

      .gradient,
      .gradient2 {
        background-image: url('/assets/mesh-gradient.jpg');
        background-size: cover;
        pointer-events: none;
        mix-blend-mode: screen;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
      }

      .gradient2 {
        mix-blend-mode: multiply;
        background-size: cover;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding-left: 2rem;
      }

      @media (min-width: 750px) {
        .overlay {
          padding-left: 4rem;
        }
      }

      .title {
        font-weight: 900;
        font-size: var(--f-u6);
        margin-bottom: 0.5rem;
        margin-top: 0;
      }

      @media (min-width: 750px) {
        .title {
          font-size: var(--f-u12);
        }
      }

      .grid {
        display: grid;
        grid-gap: 2rem;
      }

      @media (min-width: 1200px) {
        .grid {
          grid-template-columns: 2fr 1fr;
        }
      }

      .sectionTitle {
        font-weight: 700;
        font-size: var(--f-u3);
        margin-top: 4rem;
        margin-bottom: 2rem;
      }

      .roles {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5em;
        font-size: var(--f-d1);
      }

      .role {
        position: relative;
        display: inline-block;
        white-space: nowrap;
        font-weight: 900;
        color: var(--t-bg);
        background-color: var(--t-fg);
        padding: 0.25em 0.5em;
        z-index: 2;
      }

      @media (min-width: 750px) {
        .role {
          font-size: var(--f-u3);
        }
      }

      .role:nth-of-type(1) .invert {
        background-color: var(--c-pink);
      }

      .role:nth-of-type(2) .invert {
        background-color: var(--c-blue);
      }

      .role:nth-of-type(3) .invert {
        background-color: var(--c-green);
      }

      .role:hover .invert {
        clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
      }

      .invert {
        position: absolute;
        color: var(--t-fg);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
        transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
      }

      .desc {
        font-size: var(--f-u1);
        margin-top: 1.5rem;
        margin-bottom: 0;
      }

      .subtitle {
        display: block;
        font-weight: 400;
        font-size: var(--f-d6);
        letter-spacing: -0.0625em;
      }

      .bio {
        line-height: 2;
        margin-bottom: 2rem;
      }

      .bio > span:first-of-type {
        line-height: 1;
        margin-bottom: 0.5em;
        display: block;
        font-weight: 700;
        font-size: var(--f-u4);
      }

      .metricsContainer {
        text-align: center;
        justify-content: space-around;
      }

      @media (max-width: 750px) {
        .metricsRow {
          width: 100%;
        }
        .metricsContainer {
          display: block;
        }
      }
      @media (min-width: 750px) {
        .metricsRow {
          width: 48%;
        }
        .metricsContainer {
          display: flex;
        }
      }

      .metricsImg {
        width: 100%;
        max-width: 600px;
        text-align: center;
      }

      .historyContainer {
        margin-left: -80%;
        margin-bottom: -50px;
      }
    </style>
  </head>

  <body>
    <Nav />
    <header class="hero">
      <img
        width="1600"
        height="1000"
        class="img"
        src="https://raw.githubusercontent.com/kmtym1998/me/main/public/assets/alligator_medium.jpg"
        srcset="https://raw.githubusercontent.com/kmtym1998/me/main/public/assets/alligator_medium.jpg"
        sizes="(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width: 2400px) 2400px, 1200px"
      />
      <div class="gradient"></div>
      <div class="gradient2"></div>

      <div class="overlay">
        <h1 class="title">KOMATSUYAMA Ryohei</h1>
        <div class="roles">
          <span class="role"
            >👩‍💻 エンジニア <span class="invert">👩‍💻 エンジニア</span>
          </span>
          <span class="role">📍 東京 <span class="invert">📍 東京</span></span>
        </div>
      </div>
    </header>

    <main class="wrapper">
      <h3 id="Profile" class="sectionTitle">プロフィール</h3>
      <Profile client:load />

      <div class="section">
        <h3 id="History" class="sectionTitle">略歴</h3>

        <div class="historyContainer">
          <History />
        </div>
      </div>

      <div class="section">
        <h4 id="Skills" class="sectionTitle">スキル</h4>
        <p class="bio">
          こんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちはこんにちは
        </p>
      </div>

      <div class="section">
        <h3 id="GitHubMetrics" class="sectionTitle">GitHub 活動状況</h3>

        <div class="metricsContainer">
          <div class="metricsRow">
            <img
              alt="🦑"
              src="https://raw.githubusercontent.com/kmtym1998/kmtym1998/main/general.svg"
              class="metricsImg"
            />
          </div>

          <div class="metricsRow">
            <a href="https://github.com/kmtym1998/hasuraenv" target="_blank">
              <img
                alt="🦑"
                src="https://raw.githubusercontent.com/kmtym1998/kmtym1998/main/metrics.plugin.repositories.svg"
                class="metricsImg"
              />
            </a>
            <img
              alt="🦑"
              src="https://raw.githubusercontent.com/kmtym1998/kmtym1998/main/metrics.plugin.reactions.svg"
              class="metricsImg"
            />
            <img
              alt="🦑"
              src="https://raw.githubusercontent.com/kmtym1998/kmtym1998/main/achievements.svg"
              class="metricsImg"
            />
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
